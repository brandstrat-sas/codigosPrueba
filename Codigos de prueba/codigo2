function fetchData() {
    fetch("https://api.misitio.com/data")
        .then(response => response.json())  // ðŸš¨ No maneja errores
        .then(data => console.log(data));
}

function processInput(input) {
    // ðŸš¨ Posible XSS si se usa en el DOM sin sanitizar
    document.getElementById("output").innerHTML = input;
}

fetchData();
processInput("<script>alert('Hackeado');</script>"); // ðŸš¨ Prueba de XSS
